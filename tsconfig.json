{
  "compilerOptions": {
    "target": "ES2022",                   // Required for top-level await and Web APIs
    "module": "ESNext",                   // Keep ES module syntax
    "moduleResolution": "Node",           // Resolves modules like Node.js
    "lib": ["ES2022", "DOM"],             // Includes Web APIs like Request/Response
    "strict": true,                       // Enables all strict type-checking options
    "esModuleInterop": true,              // Allows default imports for CommonJS modules
    "skipLibCheck": true,                 // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
